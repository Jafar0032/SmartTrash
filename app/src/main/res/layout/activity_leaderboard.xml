<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderboardActivity">

    <View
        android:id="@+id/view_bg_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/biru_muda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Leaderboard"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_juara_2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243"/>
    
    <TextView
        android:id="@+id/tv_nama_juara_2"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        tools:text="Budi"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="@color/hitam_muda"
        app:layout_constraintTop_toBottomOf="@id/iv_juara_2"
        app:layout_constraintEnd_toEndOf="@id/iv_juara_2"
        app:layout_constraintStart_toStartOf="@id/iv_juara_2"/>

    <TextView
        android:id="@+id/tv_poin_juara_2"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        tools:text="82 pt"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/abu_muda"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_juara_2"
        app:layout_constraintStart_toStartOf="@id/tv_nama_juara_2"
        app:layout_constraintEnd_toEndOf="@id/tv_nama_juara_2"
        android:layout_marginTop="14dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_juara_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="@id/iv_juara_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toEndOf="@id/iv_juara_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_nama_juara_1"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        tools:text="Anisa"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="@color/hitam_muda"
        app:layout_constraintTop_toBottomOf="@id/iv_juara_1"
        app:layout_constraintEnd_toEndOf="@id/iv_juara_1"
        app:layout_constraintStart_toStartOf="@id/iv_juara_1"/>

    <TextView
        android:id="@+id/tv_poin_juara_1"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        tools:text="98 pt"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/abu_muda"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_juara_1"
        app:layout_constraintStart_toStartOf="@id/tv_nama_juara_1"
        app:layout_constraintEnd_toEndOf="@id/tv_nama_juara_1"
        android:layout_marginTop="14dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_juara_3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="@id/iv_juara_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toEndOf="@id/iv_juara_1" />

    <TextView
        android:id="@+id/tv_nama_juara_3"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        tools:text="Joko"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="@color/hitam_muda"
        app:layout_constraintTop_toBottomOf="@id/iv_juara_3"
        app:layout_constraintEnd_toEndOf="@id/iv_juara_3"
        app:layout_constraintStart_toStartOf="@id/iv_juara_3"/>

    <TextView
        android:id="@+id/tv_poin_juara_3"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        tools:text="71 pt"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/abu_muda"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_juara_3"
        app:layout_constraintStart_toStartOf="@id/tv_nama_juara_3"
        app:layout_constraintEnd_toEndOf="@id/tv_nama_juara_3"
        android:layout_marginTop="14dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_poin_juara_3" />

</androidx.constraintlayout.widget.ConstraintLayout>